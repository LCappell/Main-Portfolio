extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        //- Use interpolation to dynamically add the project title
        h1=projects.project_name

        //- Use interpolation to dynamically add the project description
        p=projects.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in projects.technologies
            li= technology


        //- Add the href values to the links below
        a.btn-link(href='') Live Demo
        a.btn-link(href=`${projects.github_link}` target="_blank") GitHub Repo

    .project-img-box.box

      each image of projects.image_urls 
        img.project-img(src=`${image.image_urls}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
